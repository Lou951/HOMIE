<div class="container" style="min-height: 91vh; padding: 3em;">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions, btn btn-design" id="btn-add-list">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
</div>
   <p style="text-align: right; margin-right: 0.5em;"><%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-design', style: "width: 9.3em;"%></p>
   <p style="text-align: right; margin-right: 0.5em;"><%= link_to 'Forgot Password?', new_user_password_path, class: "text-dark text-decoration-none" %></p>
